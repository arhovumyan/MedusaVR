# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your-database
DB_NAME=your-database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-json

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Bunny CDN Configuration
BUNNY_API_KEY=your-bunny-api-key
BUNNY_PASSWORD=your-bunny-password
BUNNY_EMAIL=your-bunny-email
BUNNY_ACCESS_KEY=your-bunny-access-key
BUNNY_STORAGE_API_HOST=https://storage.bunnycdn.com
BUNNY_STORAGE_ZONE_NAME=your-storage-zone-name

# Replicate API
REPLICATE_API_TOKEN=your-replicate-api-token

# Deepgram Voice API
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_PROJECT_ID=your-deepgram-project-id

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key

# Payment Services
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_SANDBOX_API_KEY=your-nowpayments-sandbox-api-key

# Email Configuration
EMAIL_FROM=your-email@your-domain.com
EMAIL_SERVICE=your-email-service
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Application Configuration
NODE_ENV=development
PORT=5002
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
CSRF_SECRET=your-csrf-secret
SESSION_SECRET=your-session-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
